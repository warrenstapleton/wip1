{
  "name": "mosaic",
  "version": "1.0.0",
  "description": "Blog starter with GraphQL,Typescript,MongoDB",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm ./src/server.ts",
    "start:old": "npm run build && node dist/server.js",
    "build": "tsc && ncp src/graphql/schemas/ dist/graphql/schemas",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon --loader ts-node/esm src/server.tsl",
    "start:nodemon": "./node_modules/nodemon/bin/nodemon.js  --loader ts-node/esm"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "graphql",
    "apollo",
    "express"
  ],
  "author": "Universal Tutorial",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node21": "^21.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.8",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.1",
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-tools/utils": "^10.0.12",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "graphql": "^16.8.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "ncp": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
